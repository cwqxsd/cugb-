<root BTCPP_format="4" >
   <include path="./subtree_cam_find_and_track_ball.xml" />
   <include path="./subtree_find_ball.xml" />
   <include path="./subtree_locate.xml" />
   <BehaviorTree ID="StrikerFreekick">
      <ReactiveSequence>
         <ReactiveSequence _while="gc_is_sub_state_kickoff_side" name="移动到开点球位置">
            <CamTrackBall _while="ball_location_known" />
            <CalcKickDir />
            <SubTree ID="FindBall" _while="!(ball_location_known || tm_ball_pos_reliable)" _autoremap="true" />
            <GoToFreekickPosition _while="ball_location_known || tm_ball_pos_reliable" side="attack" vx_limit="2.0" vy_limit="1.5" />
            <!-- 继上一行：移动到开点球位置，速度限制为2.0米/秒，侧向速度限制为1.5米/秒 -->
         </ReactiveSequence>
         <ReactiveSequence _while="!gc_is_sub_state_kickoff_side" name="移动到防守点球位置">
            <CamTrackBall _while="ball_location_known" />
            <CalcKickDir />
            <SubTree ID="FindBall" _while="!(ball_location_known || tm_ball_pos_reliable)" _autoremap="true" />
            <GoToFreekickPosition _while="ball_location_known || tm_ball_pos_reliable" side="defense" />
         </ReactiveSequence>
      </ReactiveSequence>
   </BehaviorTree>
</root>
