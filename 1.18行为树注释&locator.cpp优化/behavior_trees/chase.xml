<!-- 用于演示追球 -->

<root BTCPP_format="4" >
    <include path="./subtrees/subtree_cam_find_and_track_ball.xml" />

     <BehaviorTree ID="MainTree">
        <Sequence name="root">
            <ReactiveSequence>
               <SubTree ID="CamFindAndTrackBall" _autoremap="true" _while="control_state>=2" />
               <Sequence _while="control_state==3" >
                  <Sequence _while="!ball_location_known" >
                     <PlaySound sound="search" />
                     <RobotFindBall vyaw_limit="2.0" /><!--brain_tree.h    RobotFindBall -->>
                  </Sequence>
                  <Sequence _while="ball_location_known" >
                     <SimpleChase  stop_dist="1.0" stop_angle="0.3" /><!-- brain_tree.h    SimpleChase -->>
                     <PlaySound sound="playful" _while="ball_range>=1.5" /><!-- 当球距离大于1.5米时播放玩耍声音 -->
                     <PlaySound sound="exited" _while="ball_range<1.0" /><!-- 当球距离小于1.0米时播放退出声音 -->
                  </Sequence>
               </Sequence>
            </ReactiveSequence>
        </Sequence>
     </BehaviorTree>
</root>
